@{
}
@model IEnumerable<Book>
<h1>Book Information</h1>

<table class="table table-bordered table-striped table-sm">
   <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Price</th>
        <th>Created</th>
        <th>updated</th>
        <th>publication</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>

                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.price</td>
                <td>@item.created</td>
                <td>@item.updated</td>
                <td>@item.Publication</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="Book">Create New Book</a>